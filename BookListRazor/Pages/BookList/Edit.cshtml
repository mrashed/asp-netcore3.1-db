@page
@model BookListRazor.EditModel

@* Attempting a local style sheet *@
@section Styles {
    <link href="@Url.Content("~/css/BookListStyles.css")" rel="stylesheet" type="text/css" /> }

<h2 class="text-info my-4">Edit Book</h2>

<div id="container" class="border container p-5">

    <form method="post">

        @* Add an error message if input does not match the model
            Controller level validation *@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        @* Need the hidden ID for Edit and remove or the model that is passed to the onput
           will be missing the ID and we can not lookup the record. *@
        <input type="hidden" asp-for="EditBook.Id" />

        @* One row for each one, two, or three label entry pairs*@
        <div class="form-group row">

            @* Label entry pair *@
            <div class="col-2">
                <label asp-for="EditBook.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.Name" class="form-control" />
            </div>

            @* Post the error next to the field if it does not meet the model's requirements. *@
            <span asp-validation-for="EditBook.Name" class="text-danger"></span>

        </div>

        @* One row for each one, two, or three label entry pairs*@
        <div class="form-group row">

            @* Label entry pair *@
            <div class="col-2">
                <label asp-for="EditBook.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.Author" class="form-control" />
            </div>

            @* Post the error next to the field if it does not meet the model's requirements. *@
            <span asp-validation-for="EditBook.Author" class="text-danger"></span>

        </div>

        @* One row for each one, two, or three label entry pairs*@
        <div class="form-group row">

            @* Label entry pair *@
            <div class="col-2">
                <label asp-for="EditBook.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="EditBook.ISBN" class="form-control" />
            </div>

            @* Post the error next to the field if it does not meet the model's requirements. *@
            <span asp-validation-for="EditBook.ISBN" class="text-danger"></span>

        </div>

        @* Submit button on a new row and in a new group for visual seperation *@
        <div class="form-group row">

            <div class="col-2 offset-2">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                @* Go back to the index using a link that looks like a button *@
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>

</div>

@* Front end validation *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

